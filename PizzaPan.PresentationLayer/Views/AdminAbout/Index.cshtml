@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Hakkımda Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Alan 1 Açıklama</th>
        <th>Alan 1 Görsel</th>
        <th>Alan 2 Açıklama</th>
        <th>Alan 2 Görsel</th>
        <th>Alan 3 Açıklama</th>
        <th>Alan 3 Görsel</th>
        <th>Alan 4 Açıklama</th>
        <th>Alan 4 Görsel</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.Field1Text</td>
            <td>@item.Field1ImageUrl</td>
            <td>@item.Field2Text</td>
            <td>@item.Field2ImageUrl</td>
            <td>@item.Field3Text</td>
            <td>@item.Field3ImageUrl</td>
            <td>@item.Field4Text</td>
            <td>@item.Field4ImageUrl</td>
            <td><a href="/AdminAbout/UpdateAbout/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/AdminAbout/DeleteAbout/@item.Id" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>

@if (ViewBag.countAbout == 0)
{
    <a href="/AdminAbout/AddAbout" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>
}
