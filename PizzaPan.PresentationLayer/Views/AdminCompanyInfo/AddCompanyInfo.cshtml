@model CompanyInfo

@{
    ViewData["Title"] = "AddCompanyInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Firma Bilgisi Ekleme Sayfası</h2>

<form method="post">
    <label>İletişim Başlığı</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Telefon Numarası</label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    <br />
    <label>Mail Adresi</label>
    <input asp-for="Mail" class="form-control" />
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br />
    <label>Firma Adresi</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
    <label>Harita Bilgisi</label>
    <input asp-for="Location" class="form-control" />
    <span asp-validation-for="Location" class="text-danger"></span>
    <br />
    <label>Çalışma Günleri</label>
    <input asp-for="OpeningDay" class="form-control" />
    <span asp-validation-for="OpeningDay" class="text-danger"></span>
    <br />
    <label>Çalışma Saatleri</label>
    <input asp-for="OpeningTime" class="form-control" />
    <span asp-validation-for="OpeningTime" class="text-danger"></span>
    <br />
    <button class="btn btn-info">Firma Bilgilerini Kaydet</button>
    <a href="/AdminCompanyInfo/Index/" class="btn btn-secondary">Değişikliklerden Vazgeç</a>
</form>



