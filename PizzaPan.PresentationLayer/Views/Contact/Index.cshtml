@model Contact


@{
    Layout = null;
}

<!--
Author: W3layouts
Author URL: http://w3layouts.com
-->
<!doctype html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial","Default")

<body>
    <!--header-->
    @await Component.InvokeAsync("_NavbarPartial","Default")
    <!--/header-->
    <!-- Domain Modal -->
    @await Component.InvokeAsync("_DomainModalPartial","Default")
    <!-- //Domain modal -->
    <section class="w3l-breadcrumb">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim</li>
            </ul>
        </div>
    </section>

    <section class="w3l-contact-11 py-5">
        <div class="contacts-main py-lg-5 py-md-4">
            <div class="contant11-top-bg">
                <div class="container">
                    <div class="title-content text-center">
                        <h6 class="sub-title">İletişim</h6>
                        <h3 class="title-big">@ViewBag.CompanyInfo.Title</h3>
                    </div>
                    <div class="d-grid contact section-gap mt-lg-5 mt-4">
                        <div class="contact-info-left d-grid text-center">
                            <div class="contact-info">
                                <span class="fa fa-map-marker" aria-hidden="true"></span>
                                <h4>Adres</h4>
                                <p>@ViewBag.CompanyInfo.Address</p>
                            </div>
                            <div class="contact-info">
                                <span class="fa fa-phone" aria-hidden="true"></span>
                                <h4>Bizimle İletişime Geçin</h4>
                                <p><a>@ViewBag.CompanyInfo.PhoneNumber</a></p>
                                <p><a href="mailto:@ViewBag.CompanyInfo.Mail" class="email">@ViewBag.CompanyInfo.Mail</a></p>
                            </div>
                            <div class="contact-info">
                                <span class="fa fa-clock-o" aria-hidden="true"></span>
                                <h4>Açılış Saatleri</h4>
                                <p>@ViewBag.CompanyInfo.OpeningDay</p>
                                <p>@ViewBag.CompanyInfo.OpeningTime</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-41-mian section-gap mt-5">
                <div class="container">
                    <div class="d-grid align-form-map">
                        <div class="form-inner-cont">
                            <form method="post" class="signin-form">
                                <div class="form-input">
                                    <label for="w3lName">Ad Soyad</label>
                                    <input type="text" asp-for="ContactName"  id="w3lName" placeholder="" />
                                </div>
                                <div class="form-input">
                                    <label for="w3lSender">Email</label>
                                    <input type="email" asp-for="ContactMail"  id="w3lSender" placeholder="" required="" />
                                </div>
                                <div class="form-input">
                                    <label for="w3lSender">Konu</label>
                                    <input type="text" asp-for="ContactSubject"  id="w3lSender" placeholder="" required=""/>
                                </div>
                                <div class="form-input">
                                    <label for="w3lMessage">Mesajınız</label>
                                    <textarea placeholder="" asp-for="ContactMessage" id="w3lMessage" required=""></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-style btn-primary">Gönder</button>

                            </form>
                        </div>
                        <div class="map">
                            <iframe src="@ViewBag.CompanyInfo.Location"
                                    frameborder="0" allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footers 20 -->
    @await Component.InvokeAsync("_FooterPartial","Default")
    <!-- move top -->
    @await Component.InvokeAsync("_ScriptPartial","Default")

</body>

</html>