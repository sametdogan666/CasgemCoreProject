@model ConfirmMailViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Kayit Ol</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/colorlib-regform-8/colorlib-regform-8/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/colorlib-regform-8/colorlib-regform-8/css/style.css">
</head>
<body>

    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <form method="post" id="signup-form" class="signup-form">
                        <h2 class="form-title">Email Doğrulama Ekranı</h2>
                        <div class="form-group">
                            <input type="email" class="form-input"  asp-for="Mail" value="@TempData["Mail"]" readonly=""/>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input"  placeholder="Doğrulama Kodu" asp-for="ConfirmCode" />
                        </div>
                        <div class="form-group">
                            <button name="submit" class="form-submit">Doğrula</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="~/colorlib-regform-8/colorlib-regform-8/vendor/jquery/jquery.min.js"></script>
    <script src="~/colorlib-regform-8/colorlib-regform-8/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
