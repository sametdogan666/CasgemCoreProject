<section class="w3l-footers-20">
    <div class="footers20">
        <div class="container">
            <div class="footers20-content">
                <div class="d-grid grid-col-4 grids-content">
                    <div class="column">
                        <h4>Adres</h4>
                        <p class="contact-para3">@ViewBag.CompanyInfo.Address</p>
                    </div>
                    <div class="column">
                        <h4>Masa Rezervasyonu</h4>
                        <a>
                            <p class="contact-phone mt-2">@ViewBag.CompanyInfo.PhoneNumber</p>
                        </a>
                    </div>
                    <div class="column">
                        <h4>Açılış Saatleri</h4>
                        <p>@ViewBag.CompanyInfo.OpeningDay</p>
                        <p class="mt-2">@ViewBag.CompanyInfo.OpeningTime</p>
                    </div>
                    <div class="column">
                        <h4>Görüş ve Önerileriniz Bizim İçin Önemli</h4>
                        <a href="mailto:@ViewBag.CompanyInfo.Mail">
                            <p class="contact-mail mt-2">@ViewBag.CompanyInfo.Mail</p>
                        </a>
                       
                    </div>
                </div>
                <div class="d-grid grid-col-3 grids-content1 bottom-border">
                    <div class="columns copyright-grid">
                        <p class="copy-footer-29">
                            © 2020 Pizza Pan. All rights reserved | Designed by <a href="https://w3layouts.com">W3layouts</a>
                        </p>
                    </div>
                    <div class="columns text-right social-grid">
                        <ul class="social">
                            <li><a href="https://github.com/sametdogan666" target="_blank"><span class="fa fa-github" aria-hidden="true"></span></a></li>
                            <li><a href="https://www.instagram.com/sametdogan666/" target="_blank"><span class="fa fa-instagram" aria-hidden="true"></span></a></li>
                            <li><a href="https://www.linkedin.com/in/sametdogan666/" target="_blank"><span class="fa fa-linkedin" aria-hidden="true"></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>