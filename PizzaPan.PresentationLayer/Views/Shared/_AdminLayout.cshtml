        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">

            @RenderBody()
        </div>
    </div>

    <script src="~/bootstrap-sidebar-09/sidebar-09/js/jquery.min.js"></script>
