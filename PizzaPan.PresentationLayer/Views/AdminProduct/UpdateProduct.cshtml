@model Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="ProductId" />

    <input type="text" class="form-control" asp-for="ProductName" />
    <span asp-validation-for="ProductName" class="text-danger"></span>
    <br />
    <input type="text" class="form-control" asp-for="ProductDescription" />
    <span asp-validation-for="ProductDescription" class="text-danger"></span>
    <br />
    <input type="text" class="form-control" asp-for="ProductImageUrl" />
    <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
    <br />
    <input type="text" class="form-control" asp-for="ProductPrice" />
    <span asp-validation-for="ProductPrice" class="text-danger"></span>
    <br />
    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categoryName,  new { @class = "form-control" })
    <span asp-validation-for="CategoryId" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Güncelle</button>
    <a href="/AdminProduct/Index/" class="btn btn-warning">Değişikliklerden Vazgeç</a>
</form>


